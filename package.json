{
  "name": "typescript-react",
  "version": "1.0.0",
  "description": "minimal typescript+react starter",
  "author": "Tristan Teufel",
  "homepage": "teufel-it.de",
  "repository": {
    "type": "git",
    "url": "https://github.com/firsttris/electron-typescript-react.git"
  },
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "prod-server": "http-server dist",
    "dev-server": "webpack-dev-server --hot --env=dev --progress --colors --open",
    "webpack-build": "rimraf dist && webpack --env=prod --progress --colors",
    "test": "jest --coverage",
    "test-watch": "jest --coverage --watchAll",
    "docker-build": "docker-compose build",
    "docker-up": "docker-compose up"
  },
  "devDependencies": {
    "@types/jest": "^20.0.2",
    "@types/lodash": "^4.14.66",
    "@types/node": "^8.0.6",
    "@types/react": "^15.0.31",
    "@types/react-dom": "^15.5.1",
    "@types/react-redux": "^4.4.45",
    "@types/reactstrap": "^4.3.6",
    "babili-webpack-plugin": "^0.1.2",
    "bootstrap": "4.0.0-alpha.6",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "font-awesome": "^4.7.0",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.28.0",
    "http-server": "^0.10.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^20.0.4",
    "lodash": "^4.17.4",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.1",
    "react-test-renderer": "^15.6.1",
    "react-transition-group": "^1.2.0",
    "reactstrap": "^4.6.2",
    "redux": "^3.7.0",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.1",
    "style-loader": "^0.18.2",
    "ts-jest": "^20.0.6",
    "ts-loader": "^2.2.0",
    "typescript": "^2.3.4",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "transform": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "./jest/fileTransformer.js",
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    }
  }
}
